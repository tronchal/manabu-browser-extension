{
  "name": "manabu-browser-extension",
  "version": "1.0.0",
  "type": "module",
  "description": "A browser extension that displays random Japanese words on new tabs",
  "scripts": {
    "build:css": "tailwindcss -i src/main.css -o dist/main.css",
    "build:js": "node build/build.js",
    "build:db": "node build/generate-db.js",
    "build": "npm run clean && concurrently 'npm run build:db' 'npm run build:css -- -m' 'npm run build:js'",
    "dev": "npm run build:css && node build/build.js --serve",
    "clean": "node -e \"require('fs-extra').emptyDirSync('dist')\""
  },
  "keywords": [
    "chrome-extension",
    "japanese",
    "language-learning"
  ],
  "author": "Raohmaru",
  "license": "MIT",
  "devDependencies": {
    "@sqlite.org/sqlite-wasm": "^3.50.4-build1",
    "@tailwindcss/cli": "^4.1.12",
    "@tailwindcss/postcss": "^4.1.12",
    "concurrently": "^9.2.0",
    "csv-parser": "^3.2.0",
    "esbuild": "^0.25.9",
    "fs-extra": "^11.3.1",
    "tailwindcss": "^4.1.12",
    "ws": "^8.18.3"
  }
}
