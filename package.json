{
  "name": "manabu-browser-extension",
  "version": "1.0.0",
  "type": "module",
  "description": "A browser extension that displays random Japanese words on new tabs",
  "scripts": {
    "build:css": "node build/build-css.js",
    "build:js": "node build/build.js",
    "build:db": "node build/generate-db.js",
    "build": "npm run clean && npm run copy:assets && concurrently \"npm run build:db\" \"npm run build:css\" \"npm run build:js\"",
    "build:prod": "cross-env NODE_ENV=production npm run build",
    "clean": "node -e \"require('fs-extra').emptyDirSync('dist')\"",
    "copy:assets": "node build/copy-assets.js",
    "dev": "npm run copy:assets && npm run build:css && npm run build:js -- --serve",
    "dev:chrome": "npm run dev -- --extension"
  },
  "keywords": [
    "chrome-extension",
    "japanese",
    "language-learning"
  ],
  "author": "Raohmaru",
  "license": "MIT",
  "devDependencies": {
    "@sqlite.org/sqlite-wasm": "3.50.4-build1",
    "@tailwindcss/postcss": "4.1.13",
    "cssnano": "7.1.1",
    "chokidar": "4.0.3",
    "concurrently": "9.2.1",
    "cross-env": "10.0.0",
    "csv-parser": "3.2.0",
    "esbuild": "0.25.10",
    "fs-extra": "11.3.2",
    "postcss": "8.5.6",
    "tailwindcss": "4.1.13",
    "ws": "8.18.3"
  }
}
